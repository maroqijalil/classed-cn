{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": false,
    "noEmit": false
  },
  "include": ["**/vite.config.ts"]
}
